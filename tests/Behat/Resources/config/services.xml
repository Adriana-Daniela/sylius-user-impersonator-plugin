<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />
        <!-- Put your Behat services here -->

        <service id="evo_user_impersonator.context.ui.admin.user_impersonator" class="Tests\Evo\SyliusUserImpersonatorPlugin\Behat\Context\Ui\Admin\UserImpersonatorContext">
            <argument type="service" id="sylius.manager.channel" />
            <argument type="service" id="evo_user_impersonator.page.shop.shop" />
            <argument type="service" id="evo_user_impersonator.page.shop.checkout" />
        </service>

        <service id="evo_user_impersonator.context.setup.admin_user" class="Tests\Evo\SyliusUserImpersonatorPlugin\Behat\Context\Setup\AdminUserContext">
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="sylius.fixture.example_factory.admin_user" />
            <argument type="service" id="sylius.repository.admin_user" />
        </service>

        <service id="evo_user_impersonator.context.transform.user_impersonator" class="Tests\Evo\SyliusUserImpersonatorPlugin\Behat\Context\Transform\UserImpersonatorContext" />
        <service id="evo_user_impersonator.page.shop.shop" class="Tests\Evo\SyliusUserImpersonatorPlugin\Behat\Page\Shop\UserImpersonateShopHomePage" parent="sylius.behat.symfony_page" public="false" />
        <service id="evo_user_impersonator.page.shop.checkout" class="Tests\Evo\SyliusUserImpersonatorPlugin\Behat\Page\Shop\UserImpersonateShopCheckoutPage" parent="sylius.behat.symfony_page" public="false" />
    </services>
</container>
